<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.grzeslowski.transport.activities.ResultActivity">

    <fragment
        android:id="@+id/activity_result_fragment_result"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        class="pl.grzeslowski.transport.fragments.ResultFragment_"
        android:layout_width="match_parent"
        android:layout_above="@+id/activity_main_fragment_buy"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:layout_above="@+id/activity_main_fragment_buy"
        android:background="@drawable/shadow"/>

    <fragment
        android:id="@+id/activity_main_fragment_buy"
        class="pl.grzeslowski.transport.fragments.BuyFragment_"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
