<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:minHeight="@dimen/fragment_buy_min_height"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/margin_between_search_and_result"
    android:gravity="center"
    android:background="@color/apptheme_color"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_buy_lock"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_lock"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/fragment_buy_lock"
        android:layout_alignTop="@id/fragment_buy_lock"
        android:layout_alignBottom="@id/fragment_buy_lock"
        android:id="@+id/fragment_buy_link"
        style="@style/TabTextAppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/click_to_buy_premium_version"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_view_color"
        android:textSize="@dimen/buy_font_size"
        android:textStyle="bold"/>
</RelativeLayout>
