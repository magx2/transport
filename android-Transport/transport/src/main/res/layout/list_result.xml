<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/card_background"
              android:orientation="horizontal"
              android:paddingLeft="50dp">

    <TextView
        android:id="@+id/list_result_provider"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/list_result_time_search_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/list_result_path_search_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/list_result_time_search_connection"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/list_result_time_full_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_result_time_search_connection"
            android:layout_below="@id/list_result_time_search_connection"/>

        <TextView
            android:id="@+id/list_result_path_full_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_result_path_search_connection"
            android:layout_below="@id/list_result_path_search_connection"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textStyle="italic"/>
    </RelativeLayout>
</LinearLayout>