<resources>

    <style name="Theme.Transporter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_transporter</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Transporter</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Transporter</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Transporter</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Transporter</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Transporter</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_transporter</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_transporter</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Transporter</item>

        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- ProgresDialog -->
    <style name="TransporterProgressDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/text_view_color</item>
        <item name="android:textColor">@color/text_view_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/apptheme_color</item>
        <item name="android:bottomDark">@color/apptheme_color</item>
        <item name="android:bottomMedium">@color/apptheme_color</item>
        <item name="android:centerBright">@color/apptheme_color</item>
        <item name="android:centerDark">@color/apptheme_color</item>
        <item name="android:centerMedium">@color/apptheme_color</item>
        <item name="android:fullBright">@color/apptheme_color</item>
        <item name="android:fullDark">@color/apptheme_color</item>
        <item name="android:topBright">@color/apptheme_color</item>
        <item name="android:topDark">@color/apptheme_color</item>
    </style>

    <style name="Transporter.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.Base.ActionBar.Title">>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBar.Solid.Transporter" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_transporter</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_transporter</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_transporter</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Transporter</item>
        <item name="android:titleTextStyle">@style/Transporter.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Transparent.Transporter" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_transporter</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Transporter</item>
    </style>

    <style name="PopupMenu.Transporter" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_transporter</item>
    </style>

    <style name="DropDownListView.Transporter" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_transporter</item>
    </style>

    <style name="ActionBarTabStyle.Transporter" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_transporter</item>
    </style>

    <style name="DropDownNav.Transporter" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_transporter</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_transporter</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_transporter</item>
    </style>

    <style name="ProgressBar.Transporter" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_transporter</item>
    </style>

    <style name="ActionButton.CloseMode.Transporter" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_transporter</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Transporter.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Transporter</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Transporter</item>
    </style>

</resources>
